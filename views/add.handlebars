<section id="add" class="container">
    <div class="form-wrap">
        <h1>Add A Card</h1>
        {{#each errors}}
        <div class="error">
            <p>
                {{text}}
            </p>
        </div>
        {{/each}}
        <form action="/cards/add" method="POST">
            <div class="input-group">
                <label for="side">Side:</label>
                <input type="text" name="side" id="side" class="input-box"
                    placeholder="Chose which side this card will be fighting for" maxlength="100" value="{{side}}">
            </div>
            <div class="input-group">
                <label for="Name">Name:</label>
                <input type="text" name="Name" id="Name" class="input-box" placeholder="Chose the card name"
                    maxlength="100" value="{{name}}">
            </div>
            <div class="input-group">
                <label for="subname">Subname:</label>
                <input type="text" name="subname" id="subname" class="input-box" placeholder="Chose the card sub name"
                    maxlength="100" value="{{subname}}">
            </div>
            <div class="input-group">
                <label for="Twilight">Twilight:</label>
                <input type="number" name="Twilight" id="Twilight" class="input-box"
                    placeholder="Chose the card Twilight cost" maxlength="100" value="{{twilight}}">
            </div>
            <div class="input-group">
                <label for="Strenght">Strenght:</label>
                <input type="number" name="Strenght" id="Strenght" class="input-box"
                    placeholder="Chose the card Strenght cost" maxlength="100" value="{{strenght}}">
            </div>
            <div class="input-group">
                <label for="Vitality">Vitality:</label>
                <input type="number" name="Vitality" id="Vitality" class="input-box"
                    placeholder="Chose the card Vitality" maxlength="100" value="{{vitality}}">
            </div>
            <div class="input-group">
                <label for="cardImage">Card Image:</label>
                <input type="text" name="cardImage" id="cardImage" class="input-box"
                    placeholder="Chose the link for card Image" maxlength="100" value="{{cardImage}}">
            </div>
            <div class="input-group">
                <label for="cardText">Card Text:</label>
                <input type="text" name="cardText" id="cardText" class="input-box" placeholder="Chose the Card Text"
                    maxlength="100" value="{{cardText}}">
            </div>
            <input type="submit" value="Add Card" class="btn btn-reverse">
        </form>
    </div>
</section>